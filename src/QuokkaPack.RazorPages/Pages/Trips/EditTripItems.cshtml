@page
@model QuokkaPack.RazorPages.Pages.Trips.EditTripItemsModel
@{
    ViewData["Title"] = "Edit Items";
}

<h2>Items in this Category</h2>

@if (Model.ExistingItems.Count == 0)
{
    <p>No items yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Essential</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tripItem in Model.ExistingItems)
            {
                <tr>
                    <td>@tripItem.ItemReadDto.Name</td>
                    <td>@(tripItem.ItemReadDto.IsEssential ? "Yes" : "No")</td>
                    <td>
@*                         <a asp-page="/Items/Edit" asp-route-id="@tripItem.ItemReadDto.Id">Edit</a> |
                        <form method="post" asp-page-handler="Delete" asp-route-itemId="@tripItem.ItemReadDto.Id" style="display:inline">
                            <input type="hidden" name="CategoryId" value="@Model.TripId" />
                            <button type="submit" class="btn btn-link">Delete</button>
                        </form> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<h3>Add New Item</h3>
<form method="post" asp-page-handler="Add">
@*     <input type="hidden" asp-for="TripId" />
    <div class="mb-3">
        <label asp-for="NewItem.Name" class="form-label"></label>
        <input asp-for="NewItem.Name" class="form-control" />
        <span asp-validation-for="NewItem.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NewItem.Notes" class="form-label"></label>
        <textarea asp-for="NewItem.Notes" class="form-control"></textarea>
    </div>
    <div class="form-check">
        <input asp-for="NewItem.IsEssential" class="form-check-input" />
        <label asp-for="NewItem.IsEssential" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Add Item</button> *@
</form>

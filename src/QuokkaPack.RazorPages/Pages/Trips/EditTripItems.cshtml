@page
@model QuokkaPack.RazorPages.Pages.Trips.EditTripItemsModel
@{
    ViewData["Title"] = "Edit Trip Items";
}

<h2>Edit Trip Items</h2>

<form method="post" asp-page-handler="UpdatePackedStatus">
    <input type="hidden" asp-for="TripId" />

    <table class="table">
        <thead>
            <tr>
                <th>Packed</th>
                <th>Item Name</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ExistingItems.Count; i++)
            {
                <tr>
                    <td>
                        <input type="hidden" name="UpdatedItems[@i].Id" value="@Model.ExistingItems[i].Id" />
                        <input type="checkbox" name="UpdatedItems[@i].IsPacked" value="true" @(Model.ExistingItems[i].IsPacked ? "checked" : "") />
                    </td>
                    <td>@Model.ExistingItems[i].ItemReadDto.Name</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Update Packed Status</button>
</form>

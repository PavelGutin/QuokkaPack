@page
@model QuokkaPack.RazorPages.Pages.Trips.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Trip</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trip.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trip.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trip.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trip.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trip.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trip.Destination)
        </dd>
    </dl>
    @if (Model.Trip.Categories?.Any() == true)
    {
        <p><strong>Categories:</strong> @string.Join(", ", Model.Trip.Categories)</p>
    }
    else
    {
        <p><strong>Categories:</strong> None</p>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Trip.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

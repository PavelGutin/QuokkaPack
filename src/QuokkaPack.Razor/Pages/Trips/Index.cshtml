@page
@model QuokkaPack.RazorPages.Pages.Trips.IndexModel
@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Trips";
}

<h1 class="mb-4">My Trips</h1>

<div class="mb-4">
    <a asp-page="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Add Trip
    </a>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var trip in Model.Trips)
    {
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@trip.Destination</h5>
                    <p class="card-text mb-2">
                        <small class="text-muted">
                            @trip.StartDate.ToShortDateString() – @trip.EndDate.ToShortDateString()
                        </small>
                    </p>
                    <div class="mt-auto d-flex gap-2">
                        <a asp-page="./Pack" asp-route-id="@trip.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-backpack2"></i> Pack
                        </a>
                        <a asp-page="./Edit" asp-route-id="@trip.Id" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="./Delete" asp-route-id="@trip.Id" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@page
@model QuokkaPack.RazorPages.Pages.Items.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Master List</h1>













<div class="row row-cols-1 row-cols-md-2 g-4">



    <!-- Add New Category Form -->
    <div class="col">
        <div class="card h-100 border-success">
            <div class="card-header bg-success text-white fw-bold">
                Add New Category
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="AddCategory">
                    <div class="d-flex align-items-center mb-3 gap-3">
                        <div class="flex-grow-1">
                            <input type="text" class="form-control" id="categoryName" name="categoryName" placeholder="Category Name" required />
                        </div>
                        <div class="d-flex flex-column align-items-center">
                            <input type="checkbox" id="isDefault" name="isDefault" data-toggle="toggle" data-onlabel="Default" data-offlabel="Optional">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Add Category</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Add New Item Form -->
    <div class="col">
        <div class="card h-100 border-primary">
            <div class="card-header bg-primary text-white fw-bold">
                Add New Item
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="AddItem">
                    <div class="d-flex align-items-end mb-3 gap-3">
                        <div class="flex-grow-1">
                            @* <label for="itemName" class="small text-muted">Item</label> *@
                            <input type="text" class="form-control" id="itemName" name="itemName" placeholder="Item Name" required />
                        </div>
                        <div class="flex-grow-1">
                            @* <label for="categoryId" class="small text-muted">Category</label> *@
                            <select class="form-select" id="categoryId" name="categoryId" required>
                                <option disabled selected value="">-- Select Category --</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Item</button>
                </form>
            </div>
        </div>
    </div>


    @foreach (var category in Model.Categories.OrderBy(c => c.Name))
    {
        var categoryItems = Model.Items.Where(item => item.Category.Id == category.Id).ToList();

        <div class="col">
            <div class="card h-100 @(categoryItems.Count == 0 ? "border-secondary" : "")">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-2">
                        <label class="form-check-label fw-bold mb-0">@category.Name</label>
                        @if (category.IsDefault)
                        {
                            <span class="badge bg-success">Default</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Optional</span>
                        }
                    </div>
                    <form method="post"
                          asp-page-handler="DeleteCategory"
                          asp-route-categoryId="@category.Id"
                          onsubmit="return confirm('Are you sure you want to delete this category?');"
                          class="m-0">
                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Category">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
                <div class="card-body">
                    @if (categoryItems.Any())
                    {
                        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-2">
                            @foreach (var item in categoryItems)
                            {
                                <form method="post"
                                      asp-page-handler="DeleteItem"
                                      asp-route-itemId="@item.Id"
                                      class="ms-2"
                                      onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <div class="col">
                                        <div class="form-check">
                                            <button type="submit" class="btn btn-sm" title="Delete Item">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                            <label class="form-check-label">@item.Name</label>
                                        </div>
                                    </div>
                                </form>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">No items in this category.</p>
                    }
                </div>
            </div>
        </div>
    }

</div>

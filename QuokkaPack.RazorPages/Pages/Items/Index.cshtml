<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].IsEssential)
            </th>
            <th></th>
        </tr>
